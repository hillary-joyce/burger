<h1>Eat the Burger</h1>
<div class="burgers-new">
  <h2>Burgers to Try: </h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{burger_name}}
            <button type="button" class="devour-it" data-id="{{this.id}}">Devour It</button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
    <h2> Devoured Burgers </h2>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
    <form class="add-burger" action="index.html" method="post">
      <label for="new-burger-name">New Burger Name:</label>
      <input type="text" id="burgerName">
      <button type="button" id="submit">Add Burger</button>
    </form>
</div>
